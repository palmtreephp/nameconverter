{
    "name": "palmtree/nameconverter",
    "description": "NameConverter component for Palmtree PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Andy Palmer",
            "email": "andy@andypalmer.me"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "autoload": {
        "psr-4": {
            "Palmtree\\NameConverter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Palmtree\\NameConverter\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "palmtree/php-cs-fixer-config": "^2.1",
        "phpunit/phpunit": "^12.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "scripts": {
        "fix": "@php vendor/bin/php-cs-fixer fix --diff",
        "test": "@php vendor/bin/phpunit",
        "sa": "@php vendor/bin/phpstan"
    }
}
